{
  "name": "tarball-unpacker",
  "description": "Tarball unpacker tool for Node.js",
  "main": "dist/unpacker.js",
  "scripts": {
    "test": "standard && gulp test",
    "coverage": "istanbul cover _mocha test/unit/**/*.js",
    "travis": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- -R spec test/**/*-test.js && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf ./coverage",
    "prepublish": "gulp build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arkaitzgarro/tarball-unpacker.git"
  },
  "keywords": [
    "tarball",
    "gzip",
    "gz",
    "node",
    "decompress",
    "decompression"
  ],
  "author": "Arkaitz Garro <arkaitz.garro@gmail.com>",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/arkaitzgarro/tarball-unpacker/issues"
  },
  "bin": {
    "unpacker": "dist/cli.js"
  },
  "homepage": "https://github.com/arkaitzgarro/tarball-unpacker#readme",
  "dependencies": {
    "bluebird": "^3.0.6",
    "tar": "^2.2.1",
    "yargs": "^3.31.0"
  },
  "devDependencies": {
    "babel-core": "^6.3.26",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "coveralls": "^2.11.3",
    "cz-conventional-changelog": "^1.1.5",
    "del": "^2.2.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-load-plugins": "^1.1.0",
    "gulp-mocha": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "istanbul": "^0.4.1",
    "mocha": "^2.1.0",
    "semantic-release": "^4.3.5",
    "semantic-release-cli": "^1.3.3",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "standard": "^5.4.1"
  },
  "babelOptions": {
    "mochaGlobals": [
      "stub",
      "spy",
      "expect"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect"
    ]
  },
  "engines": {
    "node": ">= 0.12.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}